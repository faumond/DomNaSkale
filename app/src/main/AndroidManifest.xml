<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.domnaskale.app">

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/dnsmalelogo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity_dns_prayer"
            android:label="@string/title_activity_dns_prayer"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activity_dns_info"
            android:label="@string/title_activity_dns_info"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activity_contact"
            android:label="@string/title_activity_contact"
            android:theme="@style/AppTheme" />
        <activity android:name=".Activity_dns_news"></activity>
    </application>

</manifest>