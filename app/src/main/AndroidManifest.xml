<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.domnaskale.app">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/dnsmalelogo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity_dns_prayer"
            android:label="@string/title_activity_dns_prayer"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activity_dns_info"
            android:hardwareAccelerated="true"
            android:label="@string/title_activity_dns_info"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activity_contact"
            android:label="@string/title_activity_contact"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activity_dns_news"
            android:label="@string/title_activity_dns_news"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activity_dns_login"
            android:label="@string/title_activity_activity_www_login" />
        <activity
            android:name=".Activity_dns_groupsmat"
            android:label="@string/title_activity_activity_dns_groupsmat"
            android:theme="@style/AppTheme" ></activity>
    </application>

</manifest>